
# delete object files and library files
if [ -d obj ]; then rm -r obj; fi
mkdir obj
if [ -d lib ]; then rm -r lib; fi
mkdir lib

# compile deft library
g++ -O3 -fopenmp -c -I/home/EAC/armadillo/inc/ -I./inc -fPIC src/deft.cpp -o obj/deft.o 
g++ -O3 -fopenmp -shared -Wl,-soname,libdeft.so -o lib/libdeft.so obj/deft.o -L/usr/local/fftw/gcc/3.3.4/lib64 -lfftw3 -lm -L/home/EAC/armadillo/lib/ -larmadillo
